
@model List<Speciality>



<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Speciality Tables</h1>
    <p class="mb-4">
        DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
                                                                   href="https://datatables.net">official DataTables documentation</a>.
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
            <a asp-action="Create"  class="btn btn-secondary">Create</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Action</th>
                            
                        </tr>
                    </thead>
                   
                    <tbody>
                        @foreach(Speciality speciality in Model)
                        {
                        <tr>
                            <td>@speciality.Id</td>
                            <td>@speciality.Name</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@speciality.Id" class="btn btn-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@speciality.Id" class="btn btn-danger">Delete</a>
                            </td>
                            
                        </tr>
                        
                        }

                   
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
</div>