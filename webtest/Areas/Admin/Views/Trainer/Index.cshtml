@model List<Trainer>



<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Trainer Tables</h1>
    <p class="mb-4">
        DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
                                                                   href="https://datatables.net">official DataTables documentation</a>.
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
            <a asp-action="Create" class="btn btn-secondary">Create</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Speciality</th>
                            <th>Image</th>
                            <th>Action</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (Trainer trainer in Model)
                        {
                            <tr>
                                <td>@trainer.Id</td>
                                <td>@trainer.Name</td>
                                <td>@trainer.Speciality.Name</td>
                                <td>
                                    <img src="~/images/@trainer.Image?" style="width:60px height:80px object-fit:cover">
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@trainer.Id" class="btn btn-primary">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@trainer.Id" class="btn btn-danger">Delete</a>
                                </td>

                            </tr>

                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
</div>